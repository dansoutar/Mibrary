<h2>Search Books</h2>

<form action="/books" method="GET">
    <!-- title -->
    <div class="form-row">
        <div class="form-item">
            <label for="name">Title</label>
            <input type="text" name="title" value="<%= searchOptions.title %>">              
        </div>
    </div>

    <div class="form-row">
        <!-- published after -->
        <div class="form-item">
            <label for="name">Published After</label>
            <input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">              
        </div>
        <!-- published before -->
        <div class='form-item' >
            <label for="name">Published Before</label>
            <input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">  
        </div>             
    </div>
    <div class="form-row btn-search">
        <button class='btn btn-primary btn-search' type='submit'>Search</button> 
    </div>


    <!-- search submit -->
    <!-- <button type='submit'>Search</button> -->
</form>

<div>
    <% books.forEach(book => { %>
        <a href="/books/<%= book.id %>">
            <img height='150' width="100" src="<%= book.coverImagePath %>">
        </a>
    <% }) %>
</div>




